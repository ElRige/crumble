<div class="fixed-action-btn">
	<a class="btn-floating btn-large red" href="#modal_add_<%=id%>">
		<i class="large material-icons">add</i>
	</a>
</div>

<!-- modal -->
<div id="modal_add_<%=id%>" class="modal modal">
	<form id="add_<%=id%>" action="javascript:void(0);">
		<div class="modal-content">
			<h4>Ajouter une opération</h4>

			<div class="row" style="margin-bottom:0px;">
				<div class="input-field col s12 m6">
					<input type="text" class="validate" id="label"
					required="required">
					<label for="label">Libellé</label>
				</div>
				<div class="input-field col s12 m6">
					<input type="number" class="validate" id="amount"
					required="required" step="0.01">
					<label for="amount" data-error="Format : 100,00">Montant</label>
				</div>

				<% if (id === 'recurrence') { %>
				<div class="input-field col s12 m6">
					<input type="number" class="validate" id="dayOfMonth"
					required="required" min="1" max="28" >
					<label for="dayOfMonth" data-error="Min : 1 ; Max : 28">Jour du mois</label>
				</div>
				<% } %>

				<div class="input-field col s12 m6">
					<input type="text" class="validate" id="category" required="required"
					autocomplete="off">
					<label for="category">Catégorie</label>
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<button class="btn waves-effect waves-light" type="submit" name="add_<%=id%>">Ajouter<i class="material-icons right">send</i></button>
			<a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Annuler</a>
		</div>
	</form>
</div>