<!doctype html>
<html>
<head>
	<meta charset="utf-8" />
	<title>Opérations - Crumble</title>

	<link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

	<link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection"/>
	<link type="text/css" rel="stylesheet" href="css/style.css" media="screen,projection"/>

	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>

<body>

	<%- include('template/header'); %>

	<main class="container">

		<div class="row valign-wrapper">
			<h3 class="col s6">Opérations</h3>
			<h4 class="col s6 right-align valign" id="balance"></h4>
		</div>
		<table class="striped">
			<thead>
				<tr>
					<th></th>
					<th data-field="label" class="center-align">Libellé</th>
					<th data-field="category" class="center-align hide-on-small-only">Catégorie</th>
					<th data-field="date" class="center-align">Date</th>
					<th data-field="price" class="center-align">Price</th>
				</tr>
			</thead>
			<tbody id="operations">
			</tbody>
		</table>

		<div class="fixed-action-btn">
			<a class="btn-floating btn-large red" href="#modal_add_operation">
				<i class="large material-icons">add</i>
			</a>
		</div>		

	</main>

	<div id="modal_add_operation" class="modal modal">
		<form id="add_operation" action="javascript:void(0);">
			<div class="modal-content">
				<h4>Ajouter une opération</h4>

				<div class="row" style="margin-bottom:0px;">
					<div class="input-field col s12 m6">
						<input type="text" class="validate" id="label" required="required">
						<label for="label">Libellé</label>
					</div>
					<div class="input-field col s12 m6">
						<input type="number" class="validate" id="amount" required="required"
						step="0.01">
						<label for="amount"
						data-error="Format : 100,00">Montant</label>
					</div>
					<div class="input-field col s12 m6">
						<input type="text" class="validate" id="date" required="required"
						pattern="^[0-9]{2}\/[0-9]{2}\/[0-9]{4}$"
						placeholder="26/11/1990">
						<label for="date" 
						data-error="Format : 26/11/1990">Date</label>
					</div>
					<div class="input-field col s12 m6">
						<input type="text" class="validate" id="category" required="required"
						autocomplete="off">
						<label for="category">Catégorie</label>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<!-- <a href="#" class="modal-action waves-effect waves-green btn-flat" id="add_operation"><i class="material-icons right">send</i>Ajouter</a> -->
				<button class="btn waves-effect waves-light" type="submit" name="add_operation">Ajouter<i class="material-icons right">send</i></button>
				<a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Annuler</a>
			</div>
		</form>
	</div>


	<%- include('template/footer'); %>

	<script type="text/javascript" src="js/operations.js"></script>
</body>
</html>